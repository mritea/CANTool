<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javavrtool" default="compile.module.javavrtool">
  <dirname property="module.javavrtool.basedir" file="${ant.file.module_javavrtool}"/>
  
  <property name="module.jdk.home.javavrtool" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javavrtool" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javavrtool" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javavrtool" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="javavrtool.output.dir" value="${module.javavrtool.basedir}/target/classes"/>
  <property name="javavrtool.testoutput.dir" value="${module.javavrtool.basedir}/target/test-classes"/>
  
  <path id="javavrtool.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javavrtool.module.production.classpath">
    <path refid="${module.jdk.classpath.javavrtool}"/>
    <path refid="library.tomcat_8.5.16.classpath"/>
    <pathelement location="${basedir}/../CanToolTest/serialPortIO.jar"/>
    <pathelement location="${basedir}/../../CANTool-master/src/serialPortIO.jar"/>
    <path refid="library.maven:_org.bidib.jbidib.org.qbang.rxtx:rxtxcomm:2.2.classpath"/>
  </path>
  
  <path id="javavrtool.runtime.production.module.classpath">
    <pathelement location="${javavrtool.output.dir}"/>
    <pathelement location="${basedir}/../CanToolTest/serialPortIO.jar"/>
    <pathelement location="${basedir}/../../CANTool-master/src/serialPortIO.jar"/>
    <path refid="library.maven:_org.bidib.jbidib.org.qbang.rxtx:rxtxcomm:2.2.classpath"/>
  </path>
  
  <path id="javavrtool.module.classpath">
    <path refid="${module.jdk.classpath.javavrtool}"/>
    <pathelement location="${javavrtool.output.dir}"/>
    <path refid="library.tomcat_8.5.16.classpath"/>
    <pathelement location="${basedir}/../CanToolTest/serialPortIO.jar"/>
    <pathelement location="${basedir}/../../CANTool-master/src/serialPortIO.jar"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_junit:junit-dep:4.10.classpath"/>
    <path refid="library.maven:_com.novocode:junit-interface:0.11.classpath"/>
    <path refid="library.maven:_org.scala-sbt:test-interface:1.0.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-all:1.3.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-library:1.3.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-all:1.8.5.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-core:2.8.47.classpath"/>
    <path refid="library.maven:_net.bytebuddy:byte-buddy:1.6.14.classpath"/>
    <path refid="library.maven:_net.bytebuddy:byte-buddy-agent:1.6.14.classpath"/>
    <path refid="library.maven:_org.objenesis:objenesis:2.5.classpath"/>
    <path refid="library.maven:_org.bidib.jbidib.org.qbang.rxtx:rxtxcomm:2.2.classpath"/>
    <path refid="library.maven:_org.easymock:easymock:3.2.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:2.2.2.classpath"/>
  </path>
  
  <path id="javavrtool.runtime.module.classpath">
    <pathelement location="${javavrtool.testoutput.dir}"/>
    <pathelement location="${javavrtool.output.dir}"/>
    <path refid="library.tomcat_8.5.16.classpath"/>
    <pathelement location="${basedir}/../CanToolTest/serialPortIO.jar"/>
    <pathelement location="${basedir}/../../CANTool-master/src/serialPortIO.jar"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_junit:junit-dep:4.10.classpath"/>
    <path refid="library.maven:_com.novocode:junit-interface:0.11.classpath"/>
    <path refid="library.maven:_org.scala-sbt:test-interface:1.0.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-all:1.3.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-library:1.3.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-all:1.8.5.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-core:2.8.47.classpath"/>
    <path refid="library.maven:_net.bytebuddy:byte-buddy:1.6.14.classpath"/>
    <path refid="library.maven:_net.bytebuddy:byte-buddy-agent:1.6.14.classpath"/>
    <path refid="library.maven:_org.objenesis:objenesis:2.5.classpath"/>
    <path refid="library.maven:_org.bidib.jbidib.org.qbang.rxtx:rxtxcomm:2.2.classpath"/>
    <path refid="library.maven:_org.easymock:easymock:3.2.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:2.2.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javavrtool">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javavrtool">
    <patternset refid="excluded.from.module.javavrtool"/>
  </patternset>
  
  <path id="javavrtool.module.sourcepath">
    <dirset dir="${module.javavrtool.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javavrtool" depends="compile.module.javavrtool.production,compile.module.javavrtool.tests" description="Compile module JAVAVRTOOL"/>
  
  <target name="compile.module.javavrtool.production" depends="register.custom.compilers" description="Compile module JAVAVRTOOL; production classes">
    <mkdir dir="${javavrtool.output.dir}"/>
    <javac2 destdir="${javavrtool.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javavrtool}/javac">
      <compilerarg line="${compiler.args.javavrtool}"/>
      <bootclasspath refid="javavrtool.module.bootclasspath"/>
      <classpath refid="javavrtool.module.production.classpath"/>
      <src refid="javavrtool.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javavrtool"/>
    </javac2>
    
    <copy todir="${javavrtool.output.dir}">
      <fileset dir="${module.javavrtool.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.javavrtool.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javavrtool.tests" depends="register.custom.compilers,compile.module.javavrtool.production" description="compile module JAVAVRTOOL; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javavrtool" description="cleanup module">
    <delete dir="${javavrtool.output.dir}"/>
    <delete dir="${javavrtool.testoutput.dir}"/>
  </target>
</project>